name: Client CI/CD (${env_name})

on:
  push:
    branches: [ "${github_branch}" ]
    paths:
      - 'client/**'
      - 'shared/**'
      - '.github/workflows/deploy-client-${env_name}.yml'
  workflow_dispatch:

env:
  PROJECT_ID: $${{ vars.GCP_PROJECT_ID }}
  Region: $${{ vars.GCP_REGION }}
  ArtifactRepo: $${{ vars.ARTIFACT_REPO }}
  ServiceName: $${{ vars.APP_NAME }}-client

jobs:
  ci:
    name: Client CI
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: 'npm'
      - name: Install Dependencies
        run: npm ci
      - name: Build Client (Check)
        run: npm run build -w client

  deploy:
    name: Deploy Client
    needs: ci
    if: github.event_name == 'push'
    runs-on: ubuntu-latest
    environment: ${env_name}
    permissions:
      contents: 'read'
      id-token: 'write'
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Google Auth
        uses: google-github-actions/auth@v2
        with:
          workload_identity_provider: $${{ secrets.GCP_WIF_PROVIDER }}
          service_account: $${{ secrets.GCP_SA_EMAIL }}

      - name: Build and Push Client
        run: |
          docker build \
            --file client/Dockerfile \
            --tag $${{ vars.ARTIFACT_REPO }}/client:$${{ github.sha }} \
            --tag $${{ vars.ARTIFACT_REPO }}/client:latest \
            --build-arg NEXT_PUBLIC_API_URL=$${{ vars.NEXT_PUBLIC_API_URL }} \
            --build-arg NEXT_PUBLIC_SUPABASE_URL=$${{ secrets.NEXT_PUBLIC_SUPABASE_URL }} \
            --build-arg NEXT_PUBLIC_SUPABASE_ANON_KEY=$${{ secrets.NEXT_PUBLIC_SUPABASE_ANON_KEY }} \
            .
          docker push $${{ vars.ARTIFACT_REPO }}/client --all-tags

      - name: Deploy to Cloud Run
        uses: google-github-actions/deploy-cloudrun@v2
        with:
          service: $${{ env.ServiceName }}
          region: $${{ vars.GCP_REGION }}
          image: $${{ vars.ARTIFACT_REPO }}/client:$${{ github.sha }}
          flags: '--allow-unauthenticated'
          env_vars: |-
            NODE_ENV=production
            APP_ENV=${env_name}
