# -----------------------------------------------------------------------------
# JobHunter Client (.env.example)
# Copy to: client/.env.local
# -----------------------------------------------------------------------------

# Backend API
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# Frontend feature flags / config
NEXT_PUBLIC_FEEDBACK_ENABLED=true

# Auth provider selector: auth0 | dev
# If omitted, provider is auto-detected:
# - auth0 when NEXT_PUBLIC_AUTH0_DOMAIN + NEXT_PUBLIC_AUTH0_CLIENT_ID are set
# - otherwise dev
# NEXT_PUBLIC_AUTH_PROVIDER=auth0

# Auth0 (optional for local development; if omitted, app falls back to dev-login)
# NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.eu.auth0.com
# NEXT_PUBLIC_AUTH0_CLIENT_ID=your-client-id
# NEXT_PUBLIC_AUTH0_AUDIENCE=https://api.jobhunter.local
# NEXT_PUBLIC_AUTH0_SCOPE=openid profile email
# NEXT_PUBLIC_AUTH0_REDIRECT_URI=http://localhost:3000/auth/callback
# NEXT_PUBLIC_AUTH0_LOGOUT_URL=http://localhost:3000/login
