meta {
  name: Dev Login
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/auth/dev-login
  body: none
  auth: none
}

script:post-response {
  if (res.status === 200 && res.body.access_token) {
    bru.setVar("authToken", res.body.access_token);
    console.log("Dev Login successful. Token saved.");
  }
}

docs {
  # Dev Login
  
  This is a development-only endpoint that returns a mock token for the seeded local test user.
  
  **Note:** This only works if `NODE_ENV=development` and the server is running locally.
}
